{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.post_list'|trans }}
{% endblock %}

{% block body %}
    <h1 style="margin-bottom: 40px;">
        {{ 'title.post_list'|trans }}
    </h1>

    <div class="categories mb-4">
        <strong>{{ 'label.categories'|trans }}:</strong>
        <a href="{{ path('post_list', {'_locale': app.request.locale}) }}" class="{{ currentCategory is null ? 'active' : '' }}">
            {{ 'label.all'|trans }}
        </a>
        {% for category in categories %}
            <a href="{{ path('post_list', {category: category.id, '_locale': app.request.locale}) }}"
               class="{{ currentCategory == category.id ? 'active' : '' }}">
                {{ category.name }}
            </a>
        {% endfor %}
    </div>

    <div class="posts-list">
        {% for post in pagination %}
            <article>
                <h2>
                    <a href="{{ path('post_show', {id: post.id, '_locale': app.request.locale}) }}">
                        {{ post.title }}
                    </a>
                </h2>
                <p>{{ post.content|slice(0, 200) ~ '...' }}</p>
                <small>
                    {{ 'label.added'|trans }}: {{ post.createdAt|date('Y-m-d H:i') }}
                </small>
            </article>
        {% else %}
            <p>{{ 'message.no_posts'|trans }}</p>
        {% endfor %}
    </div>

    <div class="pagination">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
